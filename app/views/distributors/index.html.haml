%h1 Listing distributors

%table.table.table-striped
  %thead
    %tr
      %th First name
      %th Last name
      %th Email
      %th Verified email
      %th
      %th
      %th

  %tbody
    - @distributors.each do |distributor|
      %tr
        %td= distributor.first_name
        %td= distributor.last_name
        %td= distributor.email
        %td= distributor.verified_email
        %td= link_to 'Show', distributor
        %td= link_to 'Edit', edit_distributor_path(distributor)
        %td= link_to 'Destroy', distributor, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Distributor', new_distributor_path ,class: 'btn btn-primary'
= link_to 'Sync from Shop', sync_distributors_path ,class: 'btn btn-primary'
