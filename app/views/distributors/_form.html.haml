
= form_for @distributor , class: 'form'do |f|
  - if @distributor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@distributor.errors.count, "error")} prohibited this distributor from being saved:"
      %ul
        - @distributor.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    %legend Location Information
    .input-group        
      .field
        = f.label :first_name
        = f.text_field :first_name , class: 'form-control'
    .input-group
      .field
        = f.label :last_name
        = f.text_field :last_name, class: 'form-control'
    .input-group
      .field
        = f.label :email
        = f.text_field :email, class: 'form-control'
    .input-group    
      .field
        = f.label :verified_email
        = f.check_box :verified_email
  %fieldset
    %legend Address Information
    = f.fields_for :addresses, @address do |a| 
      .input-group
        .field
          = a.label :first_name , "Market"
          = a.text_field :first_name, class: 'form-control'
      .input-group
        .field
          = a.label :last_name , "Location"
          = a.text_field :last_name, class: 'form-control'
      .input-group
        .field
          = a.label :address1
          = a.text_field :address1, class: 'form-control'
      .input-group
        .field
          = a.label :city
          = a.text_field :city, class: 'form-control'
      .input-group
        .field
          = a.label :province
          = a.text_field :province, class: 'form-control'
      .input-group
        .field
          = a.label :phone
          = a.text_field :phone, class: 'form-control'
      .input-group
        .field
          = a.label :zip
          = a.text_field :zip, class: 'form-control'
      .input-group
        .field
          = a.label :country
          = a.text_field :country, class: 'form-control'
  %br
  .actions.input-group
    = f.submit 'Save', class: 'btn btn-primary'
