%h1 Listing distributors
- pre_selection = session[:bulk_order]['distributors']||[]
= form_tag('/set_distributors_for_bulk', method: :post) do 
  %table.table.table-striped
    %thead
      %tr
        %th #
        %th First name
        %th Last name
        %th Email
        %th Verified email
    %tbody
      - @distributors.each do |distributor|
        %tr
          %td= check_box_tag  'distributors[]', distributor.id, pre_selection.include?(distributor.id.to_s)
          %td= distributor.first_name
          %td= distributor.last_name
          %td= distributor.email
          %td= distributor.verified_email
  = submit_tag 'Save Distributors for bulk order' ,class: 'btn btn-primary'
%br

= link_to 'New Distributor', new_distributor_path ,class: 'btn btn-success'
= link_to 'Sync from Shop', sync_distributors_path ,class: 'btn btn-success'